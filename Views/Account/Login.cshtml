@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="~/lib/bootstrap/css/bootstrap.min.css"
          asp-href-exclude="~/lib/bootstrap/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" asp-href-include="~/css/signin.css" />
    <title>ETestCRM</title>
</head>
<body class="text-center">
    <form asp-action="Login" method="post" class="form-signin">
        <h1>ETestCRM</h1>
        <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
        <div class="text-danger" asp-validation-summary="All"></div>

        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

        <label asp-for="Email" class="sr-only"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" required autofocus />


        <label asp-for="Password" class="sr-only"></label>
        <input asp-for="Password" class="form-control" placeholder="Пароль" required />

        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>
</body>
</html>