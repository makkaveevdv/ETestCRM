@model Order

<div class="alert alert-secondary" role="alert"><h4>@ViewBag.ActionTitle</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditOrder" asp-controller="MyTeamOrders" method="post">
    <input type="hidden" asp-for="OrderId" />
    <div class="form-group">
        <label asp-for="OrderId">Идентификатор задачи:</label>
        <input asp-for="OrderId" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Name">Заголовок:</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание:</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="EndDate">Дата окончания:</label>
        <input type="date" asp-for="EndDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Priority">Приоритет:</label>
        <div><span asp-validation-for="Priority" class="text-danger"></span></div>
        <select asp-for="Priority" class="custom-select">
            <option selected value="Высокий">Высокий</option>
            <option value="Средний">Средний</option>
            <option value="Низкий">Низкий</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Status">Статус задачи:</label>
        <div><span asp-validation-for="Status" class="text-danger"></span></div>
        <select asp-for="Status" class="custom-select">
            <option selected value="К выполнению">К выполнению</option>
            <option value="Выполняется">Выполняется</option>
            <option value="Выполнена">Выполнена</option>
            <option value="Отменена">Отменена</option>
        </select>
    </div>
    <div class="form-group">
            <label for="respperson">Ответственный:</label>
            <select name="respperson" asp-items="@ViewBag.MyTeam" class="form-control">
                <option selected="selected" disabled="disabled">Выберите ответственного по задаче...</option>
            </select>
        </div>
    <button type="submit" class="btn btn-outline-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
</form>