@model CreateModel

    <div class="alert alert-secondary" role="alert"><h4>Создать пользователя:</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName">Имя:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleName">Отчество:</label>
        <input asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Фамилия:</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Manager">Менеджер:</label>
        <select asp-for="Manager" asp-items="ViewBag.AllUsers" class="form-control">
            <option selected="selected" disabled="disabled">Выберите менеджера...</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Name">Имя пользователя:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">E-mail:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль:</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-outline-primary">Создать</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
</form>