@model IEnumerable<IdentityRole>

<div class="alert alert-secondary" role="alert"><h4>Роли в приложении</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">Наименование роли</th>
        <th scope="col">Пользователи</th>
        <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Роли не обнаружены</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@role.Id">Редактировать</a>
                            <button type="submit" class="btn btn-outline-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-outline-primary" asp-action="Create">Создать</a>